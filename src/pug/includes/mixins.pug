mixin head(title)
	head
		meta(charset="UTF-8")
		title= title
		meta(name="viewport" content="width=device-width, initial-scale=1")

		script(defer src="js/script.all.min.js")
		link(rel="stylesheet" href="css/style.all.min.css")

		block

mixin siteHeader()
	.site-header
		.container
			.content-wrapper
				.site-logo
				ul.site-nav
					li: a Projects
					li: a About
					li: a FAQ
					li: a Contacts
			.content-wrapper
				.site-search
					.avatar
				.verification-box
					a.btn Create idea
					a.btn.white.no-padding Sing in

mixin siteFooter()
	footer.site-footer
		.footer-section
			.hi-row.row
				.container
					.nav-menu
						a(href="").logo Checkit
						.sub-links
							a(href="").sub-links-item projects
							a(href="").sub-links-item about
							a(href="").sub-links-item faq
							a(href="").sub-links-item contacts
					form(id="footer-form").subscribe-form
						input(type="email" placeholder="Your Email" required)
						input(type="submit" value="Subscribe")
			.low-row.row
				.container
					.documents-wrapper
						a(href="").terms Terms of Use
						a(href="").policy Privacy Policy
					p.copyrights &copy;&nbsp;IT School 2018. All rights Reserved

mixin changePasswordModal()
	.change-password-form.overlay
		div(id="change-password-form").modal-body.change-password-input
			.modal-header
				a(href="index.html").header-logo
					img(src="img/checkit.svg" alt="CheckIT Logo")
				span.close-modal &times;
			.modal-main
				h2.modal-name Change Password
				h3.field-title Current Password
				.modal-input-wrapper
					input(type="password" id="current-password" placeholder="Current Password").modal-input.active
					input(type="text" id="current-password-shadow" placeholder="Current Password").modal-input.secondary
					img(src="img/icons/eye-off.png" alt="Show Password Image" class="show-password-icon hide active" id="current-password-hide")
					img(src="img/icons/eye-on.png" alt="Show Password Image" class="show-password-icon show" id="current-password-show")
				h3.field-title New Password
				.modal-input-wrapper
					input(type="password" id="new-password" placeholder="New Password").modal-input.active
					input(type="text" id="new-password-shadow" placeholder="New Password").modal-input.secondary
					img(src="img/icons/eye-off.png" alt="Show Password Image" class="show-password-icon hide active" id="new-password-hide")
					img(src="img/icons/eye-on.png" alt="Show Password Image" class="show-password-icon show" id="new-password-show")
				h3.field-title Confirm New Password
				.modal-input-wrapper
					input(type="password" id="new-password-confirmation" placeholder="Confirm New Password").modal-input.active
					input(type="text" id="new-password-confirmation-shadow" placeholder="Confirm New Password").modal-input.secondary
					img(src="img/icons/eye-off.png" alt="Show Password Image" class="show-password-icon hide active" id="new-password-confirmation-hide")
					img(src="img/icons/eye-on.png" alt="Show Password Image" class="show-password-icon show" id="new-password-confirmation-show")
				button(type="button" id="save-password-changes").modal-button Save Changes

mixin signInModal()
	.sing-in-modal.overlay
		div(id="sing-in-modal").modal-body.sing-in
			.modal-header
				a(href="index.html").header-logo
					img(src="img/checkit.svg" alt="CheckIT Logo")
				span.close-modal &times;
			form(id="sing-in-form").modal-main
				h2.modal-name Sign In
				h3.field-title Email
				input(type="email" id="sing-in-email" placeholder="Email" required).modal-input
				h3.field-title Password
				.modal-input-wrapper
					input(type="password" id="sing-in-password" placeholder="Password").modal-input.active
					input(type="text" id="sing-in-password-shadow" placeholder="Password").modal-input.secondary
					img(src="img/icons/eye-off.png" alt="Show Password Image" class="show-password-icon hide active" id="sing-in-password-hide")
					img(src="img/icons/eye-on.png" alt="Show Password Image" class="show-password-icon show" id="sing-in-password-show")
				button.forgot-password(name="forgot-password" type="button" id="forgot-password") Forgot password?
				button.modal-button(type="submit" name="sign-in" value="Save Changes" form="sing-in-form") Sign In
				.sign-up-wrapper
					p.sign-up Don't have an account?
					button(type="button" id="sign-up-button") Sign up

mixin forgotPasswordModal()
	.forgot-password-modal.overlay
		div(id="forgot-password-modal").modal-body.forgot-password
			.modal-header
				a(href="index.html").header-logo
					img(src="img/checkit.svg" alt="CheckIT Logo")
				span.close-modal &times;
			form(id="forgot-password-form").modal-main
				h2.modal-name Re-send password
				h3.field-title Enter your email
				input(type="email" id="forgot-password-email" placeholder="Email" required).modal-input
				button.modal-button(type="submit" name="forgot-password" value="re-send password" id="re-send-password" form="forgot-password-form") Re-send Password

mixin signUpModal()
	.sign-up-modal.overlay
		div(id="sign-up-modal").modal-body.sign-up
			.modal-header
				a(href="index.html").header-logo
					img(src="img/checkit.svg" alt="CheckIT Logo")
				span.close-modal &times;
